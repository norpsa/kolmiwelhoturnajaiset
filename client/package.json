{
  "name": "wizard-cli-client",
  "version": "1.0.0",
  "description": "Command-line client for Wizard card game",
  "main": "dist/client.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/client.js",
    "dev": "ts-node-dev --respawn --transpile-only src/client.ts",
    "lint": "eslint 'src/**/*.{ts,tsx}'",
    "lint:fix": "eslint 'src/**/*.{ts,tsx}' --fix",
    "format": "prettier --write 'src/**/*.{ts,tsx,json,md}'"
  },
  "keywords": [
    "wizard",
    "cli",
    "typescript",
    "socket.io",
    "card-game"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "socket.io-client": "^4.7.5",
    "readline-sync": "^1.4.10"
  },
  "devDependencies": {
    "@types/node": "^20.11.30",
    "@types/readline-sync": "^1.4.4",
    "typescript": "^5.3.3",
    "ts-node-dev": "^2.0.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.2.1",
    "prettier": "^3.2.5"
  }
}
